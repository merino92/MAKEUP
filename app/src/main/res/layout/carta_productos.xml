<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        android:layout_margin="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:orientation="vertical"
                                    app:cardBackgroundColor="@color/colorPrimaryDark" app:cardElevation="10dp"
                                    app:cardCornerRadius="3dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="200dp">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" app:srcCompat="@drawable/labial" android:id="@+id/img"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txttitulo" android:textStyle="bold"
                    android:textSize="24sp" android:fontFamily="@font/roboto_black"/>
            <TextView
                    android:layout_marginTop="3dp"
                    android:paddingLeft="10dp"
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtdescripcion" android:textSize="14sp"/>
            <TextView
                    android:layout_marginBottom="8dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="3dp"
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtprecio" android:textSize="18sp"
                    android:textStyle="bold" android:fontFamily="@font/roboto_black" android:textAlignment="textEnd"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
